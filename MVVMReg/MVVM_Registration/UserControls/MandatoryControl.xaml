<UserControl x:Class="MVVM_Registration.UserControls.MandatoryControl" x:Name="ManControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Registration.UserControls"
             mc:Ignorable="d" >

        <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Path=LabelText, ElementName=ManControl}" />
        <TextBlock Text="{Binding Path=RequiredSymbol, ElementName=ManControl}" Foreground="Red"/>
        </StackPanel>
</UserControl>
